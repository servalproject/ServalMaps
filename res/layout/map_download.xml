<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/map_download_ui_lbl_heading"
        style="@style/smapsHeader"
        android:text="@string/map_download_ui_lbl_heading" />
    
    <TextView
        android:id="@+id/map_download_ui_subheading"
        style="@style/smapsText"
        android:text="@string/map_download_ui_lbl_subheading"/>
    
        <ProgressBar
            android:id="@+id/map_download_ui_progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    
    <ListView
        android:id="@android:id/android:list"
        style="@style/smapsLayoutfillall"
        android:visibility="gone"/>

</LinearLayout>